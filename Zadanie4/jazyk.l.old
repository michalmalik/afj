%option noyywrap

%{
  #include <cstdio>
  #include <cstring>

  #include "jazyk.tab.h"  // to get the token types from Bison

%}
%%
[ \t\n]           ;
sNaZZle			  { return SNAZZLE; }
type              { return TYPE; }
end               { return END; }
[0-9]+\.[0-9]+    { yylval.fval = atof(yytext); return FLOAT; }
[0-9]+            { yylval.ival = atoi(yytext); return INT; }
[a-zA-Z0-9]+      {
  yylval.sval = _strdup(yytext);
  return STRING;
}
%%